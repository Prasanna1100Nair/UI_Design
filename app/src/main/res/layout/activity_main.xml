<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.test.ui.prasannakumar.ui_design.MainActivity">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/edtTitle_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:counterEnabled="true"
        app:counterMaxLength="50"
        app:counterOverflowTextAppearance="@style/CounterOverFlow"
        app:counterTextAppearance="@style/CounterText"
        app:hintTextAppearance="@style/HintText">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/edtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Post Title"
        android:maxLength="50"/>
</android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:counterEnabled="true"
    android:id="@+id/edtTitle_header_2"
    app:counterMaxLength="350"

    android:hint="Enter post title"
    app:counterOverflowTextAppearance="@style/TextLimitError">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/edtDesp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:maxLength="350"/>
</android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/edtTitle_header_3"
        app:counterMaxLength="50"

        android:hint="Enter post title"
        app:counterOverflowTextAppearance="@style/TextLimitError">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtCata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:maxLength="50"/>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>
